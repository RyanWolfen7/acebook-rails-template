

  <%= form_for @comment do |form| %>
    <%= form.label :message %>
    <%= form.text_area :message %>
    <div style="display: none;">
      <%= form.text_field :user_id, :value => current_user.id %>
      <%= form.text_field :post_id, :value => params[:id] %>
    </div>
    <%= form.submit "Submit" %>
  <% end %>
