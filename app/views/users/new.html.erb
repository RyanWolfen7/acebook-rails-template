<%= form_for(@user) do |f| %>
   <%= f.label :firstname %>
   <%= f.text_field :firstname %>

   <%= f.label :surname %>
   <%= f.text_field :surname %>

   <%= f.label :username %>
   <%= f.text_field :username %>

   <%= f.label :email %>
   <%= f.email_field :email %>

   <%= f.label :password %>
   <%= f.password_field :password %>

  <%= form.submit "Sign up" %>
<% end %>
